DOCKER_IP=`ifconfig | grep "inet " | grep -Fv 127.0.0.1 | awk '{print $2}'`
docker service create \
-e "SERVICE_TAGS=widget" \
-e "DOCKER_IP=$DOCKER_IP" \
-e "PUBLIC_KEY=blahblahblah" \
-e "PRIVATE_KEY=private-key" \
-e "SERVICE_NAME=chronos" \
-e "WIDGET_URL_PREFIX=/ic/edit/" \
-e "BASE_URL=does-not-matter" \
-e "DEV_MODE=true" \
-e "PROTO=https://" \
--name=editor-template \
-p 5001:5001 \
editor:template
